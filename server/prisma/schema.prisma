generator client {
  provider      = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


type ContestDetailType{
  contestid String?
  solvedProblem String[]
}

model User {
  id                    String                  @id @default(auto()) @map("_id") @db.ObjectId
  email                 String                  @unique
  userName              String                  @unique
  totalRank             Int                     @default(1000)
  solvedProblemDetails  String[]
  name                  String?
  profilePictureUrl     String
  isAdmin               Boolean
  praticeCourseDetail   praticeCourseDetailType
  activeDays            Int[]
  linkedin_url          String?
  age                   Int?
  gender                String?
  collegeName           String?
  state                 String?
  country               String?
  ThirdPartyLoginAccess Boolean                 @default(false)
  password              String?
  ContestDetail         ContestDetailType[]
  oneToOneCompeteLeaderboardId  String[]
}

type praticeCourseDetailType {
  c    CourseDetail
  cpp  CourseDetail
  java CourseDetail
  go   CourseDetail
}

type CourseDetail {
  participated         Boolean  @default(false)
  review               Int      @default(0)
  solvedProblemDetails String[]
}

model Contest {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  contestNo        Int      @unique
  contestName      String
  duration         Int
  startTime        DateTime  @default(now())
  problems         String[]
}

type ContestInfo {
  contestId String
}

type ProblemSetInfo {
  problemId String
}

model testing {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  title     String
  createdAt DateTime @default(now())
}

type Role {
  User  Boolean
  Admin Boolean
}

enum Language {
  c
  java
  cpp
  go
}


type InputOutputType {
  input  String
  output String
}

enum categoryEnum {
  ALGORITHMS
  DP
  CONCURRENCY
}

enum StatusEnum {
  UNSOLVED
  SOLVED
}

enum TopicEnum {
  ARRAY
  STRING
  BINARYSEARCH
  DYNAMICPROGRAMMING
  GRAPH
}

type CodeTemplateType {
  c    String
  cpp  String
  java String
  go   String
}

type ProblemDetails {
  like    String[]
  dislike String[]
}

model ProblemSet {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  problemNo         Int               @unique
  problemName       String
  description       String
  companies         String[]
  Details           ProblemDetails
  sampleInputOutput InputOutputType[]
  testcases         InputOutputType[]
  constraint        String[]
  topic             TopicEnum[]
  accepted          Int
  submission        Int
  category          categoryEnum
  aboveCodeTemplate CodeTemplateType
  belowCodeTemplate CodeTemplateType
  middleCode        CodeTemplateType
  correctMiddleCode CodeTemplateType
  createdAt         DateTime          @default(now())
}

model PraticeProblem {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  problemName       String
  description       String
  constraint        String[]
  language          Language
  sampleInputOutput InputOutputType[]
  testcases         InputOutputType[]
  aboveCodeTemplate CodeTemplateType
  belowCodeTemplate CodeTemplateType
  middleCode        CodeTemplateType
}

model EmailOtpService {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String
  code        Int
  name        String?
  userName    String?
  password    String?
  age         Int?
  collegeName String?
  createdAt   DateTime @default(now())
}

model NormalOtpService {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  code      Int
  createdAt DateTime @default(now())
}

model DailyNewProblem {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  problemNo         Int
  problemName       String
  description       String
  companies         String[]
  constraint        String[]
  topic             TopicEnum[]
  category          categoryEnum
  sampleInputOutput InputOutputType[]
  testcases         InputOutputType[]
  aboveCodeTemplate CodeTemplateType
  belowCodeTemplate CodeTemplateType
  middleCode        CodeTemplateType
  correctMiddleCode CodeTemplateType
  createdAt         DateTime          @default(now())
}


model ContestProblem{
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  problemNo         Int               @unique
  problemName       String
  description       String
  constraint        String[]
  topic             TopicEnum[]
  testcases         InputOutputType[]
  sampleInputOutput InputOutputType[]
  aboveCodeTemplate CodeTemplateType
  belowCodeTemplate CodeTemplateType
  middleCode        CodeTemplateType
  correctMiddleCode CodeTemplateType
  createdAt         DateTime          @default(now())
}



type ParticipentType{
  userid String?
  solvedProblem String[]
}


model LeaderBoard{
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  contestid String
  participent ParticipentType[]
}


type CompeteUserType{
  id String
  name String
}

model OneToOneCompeteLeaderboard{
    id                String            @id @default(auto()) @map("_id") @db.ObjectId
    user  CompeteUserType[]
    Result String
    createdAt         DateTime          @default(now())
    duration  Int
    problemId String
}
