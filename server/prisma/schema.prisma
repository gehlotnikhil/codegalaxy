model User {
  id                      String       @id @default(auto()) @map("_id") @db.ObjectId
  name                    String
  age                     Int
  email                   String       @unique
  password                String
  userName                String @unique
  totalRank              Int
  noOfProblemSolved       Int
  solvedProblemDetails    ProblemSetInfo[]
  noOfContestParticipated Int
  contestDetails          ContestInfo[]
  gender                  String
  collegeName             String
  state                   String
  country                 String
}

